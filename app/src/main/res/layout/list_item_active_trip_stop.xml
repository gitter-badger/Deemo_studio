<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/active_trip_next_stop_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange_medium" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/img_list_item_right_arrow" />

    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:background="@color/orange_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/active_trip_next_stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="6:30 AM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/violet_3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/active_trip_next_stop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Vasant Kunj"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/violet_3" />
    </LinearLayout>

</LinearLayout>