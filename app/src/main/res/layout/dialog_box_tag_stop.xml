<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_box_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_box_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dialog_box_title"
        android:singleLine="true"
        android:textSize="22dp"
        android:maxLines = "1"
        android:text="TItle"
        android:scrollbars = "vertical"
        android:layout_margin="10dp"
        android:paddingRight="20dp"/>

    <TextView
        android:id="@+id/dialog_box_select_trip_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Large Text"
        android:textSize="16dp"
        android:textColor="@color/dialog_box_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_box_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="NO"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/dialog_box_negative" />

        <Button
            android:id="@+id/dialog_box_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="YES"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/dialog_box_positive" />
    </LinearLayout>

</LinearLayout>