<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.sevenre.trackre.driver.ActivitySelectTrip"
    android:orientation="vertical">

    <TextView android:id="@+id/select_trip_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GJ 27 L 4332"
        android:background="@color/theme_medium"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textScaleX="2"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <ListView
        android:id="@+id/select_trip_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="20dp"
        android:padding="20dp"
        android:divider="@color/transparent" >
    </ListView>

    <TextView android:id="@+id/empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textColor="@color/theme_dark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No trips found for this bus" />
</LinearLayout>
